%rebase base.tmpl
<h1>Loads cluster</h1>

<div class="dashboard">
 <div class="widget">
  <div class="widgetTitle">Agents</div>
  <div class="widgetValue">
   {{len(broker_info['agents'])}}
  </div>
 </div>
</div>

<div style="clear:both"></div>

<h2>Active runs</h2>
%if len(runs) > 0:
<div class="dashboard">
  %for index, (started, fqn, run_id) in enumerate(runs):
 <div class="widget">
  <div class="widgetTitle">Run nÂº{{index+1}}</div>
  <div class="widgetSmallValue">
    <a href="/run/{{run_id}}">{{started}}</a>
  </div>
  </div>
  %end
</div>
%else:
<div class="dashboard">
  Nothing is running.
</div>
%end

<h2>Older runs</h2>
<ul>
  %for index, (started, fqn, run_id) in enumerate(inactives):
  <li>
    <a href="/run/{{run_id}}">{{started}}: {{fqn}}</a>
  </li>
  %end
</ul>
