%rebase base.tmpl
<dl id="status">
  <h3>Status</h3>
  <dt>Agents</dt>
  <dd>{{len(broker_info['agents'])}}</dd>

  <dt>Running tests</dt>
  <dd>{{len(runs)}}</dd>

  <dt>Stored tests</dt>
  <dd>{{len(inactives)}}</dd>
</dl>

<dl id="active">

<h3>Active Runs</h3>
%if len(runs) > 0:
  %for index, (started, fqn, run_id) in enumerate(runs):
  <dt>Run nÂº{{index+1}} - {{started}}</dt>
  <dd>
    <a href="/run/{{run_id}}">{{fqn}}</a>
  </dd>
  %end
%else:
  Nothing is running.
%end


</dl>



<dl id="stored">

<h3>Stored Runs</h3>
  %for index, (started, fqn, run_id) in enumerate(inactives):
  <dt>{{run_id}}</dt>
  <dd><a href="/run/{{run_id}}">{{started}}: {{fqn}}</a></dd>
  %end
</dl>


